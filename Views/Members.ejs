<!DOCTYPE html>
<html lang="ko">
    <head>
        <% include Head%>
        <script src="/Scripts/Table.js"></script>
        <link rel="stylesheet" type="text/css" href="/Css/Pagenation.css"/>
    </head>
    <body>
        <!--상단 헤더-->
        <% include Header %>
        <!--본문-->
        <center>
        <div style="text-align: left; min-width: 500px; max-width: 70%;">
            <h5 style="margin-top: 20px; margin-left: 5px">회원조회</h5>
        <!--검색 창-->
        <div style="margin-top: 20px; min-width: 500px">
        <form method="GET" action="/Members" >
            <div class="input-group mb2" style="width: 400px">
            <input class="form-control" name="keyword" style="width: 200px" placeholder="검색어를 입력하세요">
            <button type="submit" class="btn btn-primary">조회</button>
            </div>
        </form>
        </div>
        <!--내용 테이블-->
        <div class="table-responsive">
        <table class="table table-striped" style="margin-top: 20px; text-align: center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>이름</th>
                        <th>ID</th>
                        <th>차종</th>
                        <th>차량 연식</th>
                        <th>연락처</th>
                        <th>가입일</th>
                    </tr>
                </thead>
                <tbody>
                    <% var index=1;
                        for(let data of TableContent) { %>
                            <tr onmouseover="TRHightlight(this)" onmouseout="TRHightlightRemove(this, <%= index %>)">
                                <td><%= index %></td>
                                <td><%= data.Name %></td>
                                <td><%= data.ID %></td>
                                <td><%= data.CarType %></td>
                                <td><%= data.CarYear %></td>
                                <td><%= data.Contact %></td>
                                <td><%= (data.SignUpDate).substring(0, 10) %></td>
                            </tr>
                    <% index++; } %>
                </tbody>
        </table>
    </div>
        <!--인디케이터-->
        <div class="text-xs-center" style="margin-top: 40px">
            <ul class="pagination justify-content-center">
                <!--내용-->
                <%  
                    for(var i=0; i<totalpage; i++) { 
                    var active;    //현재 탭인지 확인
                    if(page==i) active='active';
                    else active=''; %>
                
                    <li class="page-item <%= active %>"><a class="page-link" href="/Members?MemberCat=<%= MemberCat %>&page=<%= i %>"><%= i+1 %></a></li>    
                <% } %>
                <!--다음-->
            
              </ul>
          </div>
    </div>
    </center>
    </body>
</html>